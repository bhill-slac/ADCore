#HDF5_LIB     = $(HDF5)/lib
#HDF5_INCLUDE = -I$(HDF5)/include

HDF5_LIB     = /usr/lib64
HDF5_INCLUDE = -I$/usr/include
USR_INCLUDES += -I/usr/include/libxml2

#SZIP           = /usr/local/szip-2.1/szip
#SZIP_LIB       = $(SZIP)/lib
#SZIP_INCLUDE   = -I$(SZIP)/include

SZIP_LIB       = /usr/lib64
SZIP_INCLUDE   = -I/usr/include

